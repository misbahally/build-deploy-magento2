[{{ environment_name }}]
user = mage
group = mage
listen = /var/run/php-fpm-{{ environment_name }}.sock;
listen.owner = mage
listen.group = mage
listen.mode = 0660
pm = dynamic
pm.max_children = {{ php_fpm_max_children }}
pm.start_servers = {{ php_fpm_start_server }}
pm.min_spare_servers = {{ php_fpm_min_spare_servers }}
pm.max_spare_servers = {{ php_fpm_max_spare_servers }}
pm.max_requests = {{ php_fpm_max_requests }}
pm.process_idle_timeout = {{ php_fpm_process_idle_timeout }}
php_admin_value[error_log] = /var/log/php-fpm/{{ environment_name }}_error.log
php_admin_flag[expose_php] = {{ php_fpm_expose_php }}
php_admin_value[max_execution_time] = {{ php_fpm_max_execution_time }}
php_admin_value[max_input_time] = {{ php_fpm_max_input_time }}
php_admin_value[memory_limit] = {{ php_fpm_max_memory_limit }}
php_admin_flag[display_errors] = {{ php_fpm_display_errors }}
php_admin_flag[display_startup_errors] = {{ php_fpm_display_startup_errors }}
php_admin_flag[log_errors] = {{ php_fpm_log_errors }}
catch_workers_output = yes



